<?xml version="1.0" encoding="utf-8"?>
<!-- The main view for the ViewHolder of the RecyclerView -->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp">

    <!-- This LinearLayout holds and orders all TextView from one card -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tv_card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_card_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textSize="14sp"
            android:textStyle="italic"
            android:text="Details about file"/>
    </LinearLayout>

    <!-- The 'Open' button -->
    <Button
        android:id="@+id/button_card_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="20dp"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:text="@string/button_open"
        android:textAllCaps="false"
        android:elevation="6dp"
        android:background="@drawable/rounded_button"/>

</android.support.v7.widget.CardView>
